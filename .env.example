# Pi Home Dashboard Environment Configuration
# Copy this file to .env and customize the values

# Dashboard Configuration
# Supported values: dakboard, mock
DASHBOARD_TYPE=dakboard
DAKBOARD_URL=https://dakboard.com/screen/your-screen-id

# Display Configuration
# Supported values: it8951, mock
DISPLAY_TYPE=it8951

DEBUG=false

# Update Cadence (seconds)
UPDATE_INTERVAL=60

# Display Geometry
DISPLAY_WIDTH=1872
DISPLAY_HEIGHT=1404

# Display Settings (runtime/X server)
# Typically set by Docker/Xvfb or host environment
DISPLAY=:99

# Optional overrides (not required by default)
# DISPLAY_ROTATION=0
